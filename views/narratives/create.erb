<%= @article.to_json %>

<div class="container">
  <!-- Start our form, which we'll post to the api -->
  <form action="/narratives/" method="post">
    
    <!-- ARTICLE METADATA FIELDS -->
    <div class="row layer-block">
      <div class="col-sm-10">

        <!-- Opener text -->
        <div class="opener">
          <h3>Narratives</h3>
          <p>Each photo has a small narrative &mdash; a few words that advance the story &mdash; and layers of data. Please fill in the narrative for this photo.</p>
        </div>

        <!-- Render the first image we scrape out -->
        <div class="col-sm-6">
          <img align="center" src="<%= @pic %>" width="100%"/>
        </div>

        <!-- Form fields -->
        <div class="col-sm-6">
          <div class="form-group">
            <label for="narrative_thread">Photo narrative context</label>
            <input type="text" id="narrative_thread" name="narrative_thread" class="form-control">
          </div>
          <div class="form-group">
            <label for="photo_url">Photo url</label>
            <input type="text" id="photo_url" name="photo_url" class="form-control" value="<%= @pic %>">
          </div>
          <div class="form-group">
            <label for="caption_content">Photo caption</label>
            <input type="text" id="caption_content" name="caption_content" class="form-control">
          </div>
          <div class="form-group">
            <label for="photog_name">Photographer name</label>
            <input type="text" id="photog_name" name="photog_name" class="form-control">
          </div>
          <div class="form-group">
            <label for="photog_org">Photographer title, org</label>
            <input type="text" id="photog_org" name="photog_org" class="form-control">
          </div>
        </div><!-- end .col-sm-6 -->


      </div><!-- end .layer-block -->
    </div><!-- end .row -->

    <input type="hidden" name="source_url" id="source_url" value="<%= @article['source_url'] %>">
    <button type="submit" class="btn btn-default">Next step</button>
  </form>
</div><!-- end .container -->